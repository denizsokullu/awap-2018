html
  head
    script!= output
    link(rel="stylesheet" type="text/css" href="style/viz.css")
    include includes/header.pug
    include includes/visualization.pug
    a.backButton(href='/') Back
    .fullText#intro-message Choose a game to visualize!
    .fullText#loading.hidden Loading game...
    #graph-container
      #edges
        
      #nodes
      #players
    .ui
      .ui-similar
        .ui-row.title Locations Owned
        .ui-row.team-scores
          .score#team1
            span 1
          .score#team2
            span 1
          .score#team3
            span 1
          .score#team4
            span 1
        .ui-row.team-icons
          img(src='images/pizza.svg')
          img(src='images/burger.svg')
          img.fries(src='images/fries.svg')
          img(src='images/hotdog.svg')
        .ui-row.team-names
          if teamNames
            if teamNames.team1
              span.team-name#name-team1= teamNames.team1
            else
              span.team-name#name-team1 Mercur-iOS
            if teamNames.team2
              span.team-name#name-team2= teamNames.team2
            else
              span.team-name#name-team2 Queue’d
            if teamNames.team3
              span.team-name#name-team4= teamNames.team3
            else
              span.team-name#name-team3 Five Bytes
            if teamNames.team4
              span.team-name#name-team4= teamNames.team4
            else
              span.team-name#name-team4 The Original Big-O Shop
          else 
            span.team-name#name-team1 Mercur-iOS
            span.team-name#name-team2 Queue’d
            span.team-name#name-team3 Five Bytes
            span.team-name#name-team4 The Original Big-O Shop
      .ui-similar
        .ui-row.title Game Selection
        .ui-row
          if games
            .dropdown
              .label Current Game:
              select
                each val in Object.keys(games).reverse()
                  option= val
        .ui-row
          .dropdown.speed
            .label Speed:
            select
              option(value='2') 0.5x
              option(value='1' selected="selected") 1x
              option(value='.5') 2x
              option(value='.25') 4x
          button.button.run-animation Load
      .ui-similar
        .ui-row.title Playback Controls
        .ui-row
          input.progress(step="1" type="range" min="0" max="100" value="0")
          span.progress-counter
            |Turn:  
            span.change 0
            |  / 
            span.totalTurns 200
        .ui-row
          button.button.play Play
          button.button.pause Pause
          button.button.restart Restart

      .ui-similar
        .ui-row.title View Controls
        .ui-row
          button.button#zoom-reset Zoom Reset
          button.button#zoom-in Zoom +
          button.button#zoom-out Zoom -
        .ui-row
          button.button#toggle-numbers Toggle Numbers
